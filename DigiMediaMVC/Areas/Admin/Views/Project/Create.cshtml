@model ProjectCreateVM

<div class="container">
    <div class="row">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <h1>Create new Project</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" placeholder="name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Image</label>
                <input asp-for="Image" class="form-control" placeholder="image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select asp-for="SpecialityId" class="form-control" id="exampleFormControlSelect1" asp-items="ViewBag.Specialities">
                    <option value="" hidden selected disabled>--- Select Speciality ---</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>